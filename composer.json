{
    "name": "worksome/feature-flags",
    "description": "A package to manage feature flags in your application",
    "keywords": [
        "worksome",
        "laravel",
        "feature-flags"
    ],
    "homepage": "https://github.com/worksome/feature-flags",
    "license": "MIT",
    "authors": [
        {
            "name": "Lukas Juhas",
            "email": "lukas@worksome.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0|^8.1",
        "illuminate/contracts": "^8.73|^9.0",
        "launchdarkly/server-sdk": "^4.0",
        "spatie/laravel-package-tools": "^1.9.2"
    },
    "require-dev": {
        "nunomaduro/collision": "5.11.0|^6.0",
        "orchestra/testbench": "6.24.1|^7.0",
        "pestphp/pest": "1.21.2",
        "pestphp/pest-plugin-parallel": "1.1.0",
        "pestphp/pest-plugin-laravel": "1.2.0",
        "spatie/laravel-ray": "1.29.7",
        "worksome/coding-style": "0.17.0"
    },
    "autoload": {
        "psr-4": {
            "Worksome\\FeatureFlags\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Worksome\\FeatureFlags\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcbf",
        "test:unit": "vendor/bin/pest -p",
        "test:coverage": "vendor/bin/pest -p --coverage",
        "test:types": "vendor/bin/phpstan analyse",
        "test:style": "vendor/bin/phpcs -n",
        "test": [
            "@test:style",
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "worksome/coding-style": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Worksome\\FeatureFlags\\FeatureFlagsServiceProvider"
            ],
            "aliases": {
                "FeatureFlags": "Worksome\\FeatureFlags\\Facades\\FeatureFlags"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
